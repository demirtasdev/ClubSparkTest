@model Test.ViewModels.DetailsViewModel

@{
    ViewBag.Title = "Details";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-row mb-3 d-flex justify-content-between">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group col-12 d-flex align-items-center mb-4">
            <img class="d-inline" src="@Model.LogoLink" />
            <h3 class="d-inline mt-2">@Model.Name (#@Model.ID.ToString())</h3>
            <a class="ml-auto mt-3 font-weight-bold h5 mr-0 pr-0" href="@Model.ProfileLink" target="_blank">UEFA Club Page</a>
        </div>

        <div class="form-group col-12">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label font-weight-bold" })
            @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control text-center" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-12">
            @Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "control-label font-weight-bold" })
            @Html.DropDownListFor(model => model.Country, new SelectList(Model.CountryList), htmlAttributes: new { @class = "form-control text-center pl-4" })
            @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-12 d-flex justify-content-center flex-column mt-4">
            @Html.LabelFor(model => model.Eliminated, htmlAttributes: new { @class = "control-label text-center font-weight-bold" })
            @Html.CheckBoxFor(model => model.Eliminated, htmlAttributes: new { @class = "form-control d-inline" })
            @Html.ValidationMessageFor(model => model.Eliminated, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-12 mt-3 d-flex justify-content-center">
            <input type="submit" value="Save Changes" class="btn btn-primary col-2" />
        </div>
    </div>
}

<div class="text-center mb-2">
    @Html.ActionLink("Back to Clubs", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
